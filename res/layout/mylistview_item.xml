<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE4D6"
    android:padding="3dp" 
    android:descendantFocusability= "blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearMylistAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/itemTeacherPic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_users_avatar" />

        <LinearLayout
            android:id="@+id/linearMylistString"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="教师号："
                android:textColor="#815F3D"
                android:textSize="15sp" />
                
                
                            <TextView
                android:id="@+id/itemTeacherNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="teacherNum"
                android:textColor="#815F3D"
                android:textSize="15sp" />
                
            </LinearLayout>
            
            

            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="课程号:"
                android:textColor="#815F3D"
                android:textSize="15sp" />
                
                
                            <TextView
                android:id="@+id/itemCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="courseName"
                android:textColor="#815F3D"
                android:textSize="15sp" />
            </LinearLayout>
            
            

                        <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="课程名称:"
            android:textColor="#815F3D"
            android:textSize="15sp" />
                
                
        <TextView
            android:id="@+id/itemTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="TeacherName"
            android:textColor="#815F3D"
            android:textSize="15sp" />
            </LinearLayout>
            
            
            
            
            

        </LinearLayout>

        <Button 
            android:id="@+id/list_downloadData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="5px"
            android:textSize="5dp"
           
            android:text="下载本门课程签到数据"/>
        
        
        
        

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
         android:background="#FFFFFF"
         >
    </LinearLayout>

</LinearLayout>